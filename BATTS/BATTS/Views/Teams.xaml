<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BATTS.Views.Teams">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout x:Name="TeamViews">
            <Label Text="Welcome to the Teams Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="Team" />
            <Button Grid.Row="1" Text = "Create Team" Clicked="CreateTeam" />
            <Button Grid.Row="2" Text = "Remove Team" Clicked="RemoveTeam" />
            <Button Grid.Row="3" Text = "Refresh" Clicked="AddItemsToUi" />
            <Button Grid.Row="4" Text = "Back to Menu" Clicked="GoBack" />
        </StackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>